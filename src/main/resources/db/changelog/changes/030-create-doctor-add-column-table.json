{
  "databaseChangeLog": [
    {
      "changeSet": {
        "id": "030-create-doctor-add-column-table",
        "author": "goodmood",
        "changes": [
          {
            "addColumn": {
              "tableName": "doctors",
              "columns": [
               
                 {
                  "column": {
                    "name": "gender",
                    "type": "tinyint", 
                    "remarks": "1=Male, 2=Female, 0=Other",
                    "constraints": {
                      "nullable": true
                    }
                  }
                },
                {
                    "column": {
                        "name": "date_of_birth", 
                        "type": "date",
                        "remarks": "Stores date only (YYYY-MM-DD), no time",
                        "constraints": {
                        "nullable": true
                        }
                    }
                }
              ]
            }
          }
        ]
      }
    }
  ]
}