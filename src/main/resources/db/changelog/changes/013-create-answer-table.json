{
  "databaseChangeLog": [
    {
      "changeSet": {
        "id": "013-create-answer-table",
        "author": "goodmood",
         "validCheckSum": "ANY",
        "comment": "Create answer table",
        "changes": [
          {
            "createTable": {
              "tableName": "answers",
              "columns": [
                {
                  "column": {
                    "name": "id",
                    "type": "bigint",
                    "autoIncrement": true,
                    "constraints": {
                      "primaryKey": true,
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "answer",
                    "type": "varchar(255)",
                    "constraints": {        
                        "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "question_id",
                    "type": "bigint"
                  }
                },
                {
                  "column": {
                    "name": "status",
                    "type": "int",
                    "defaultValueNumeric": 1
                  }
                },
                {
                  "column": {
                    "name": "created_at",
                    "type": "datetime",
                    "defaultValueComputed": "CURRENT_TIMESTAMP",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "updated_at",
                    "type": "datetime",
                    "defaultValueComputed": "CURRENT_TIMESTAMP",
                    "constraints": {
                      "nullable": false
                    }
                  }
                }
              ]
            }
          }
        ]
      }
    }
  ]
}