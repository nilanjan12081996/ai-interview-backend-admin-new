{
  "databaseChangeLog": [
    {
      "changeSet": {
        "id": "026-create-interview-link-table",
        "author": "goodmood",
        "validCheckSum": "ANY",
        "comment": "Create interview_link table with FK reference",
        "changes": [
          {
            "createTable": {
              "tableName": "interview_link",
              "columns": [
                {
                  "column": {
                    "name": "id",
                    "type": "bigint",
                    "autoIncrement": true,
                    "constraints": {
                      "primaryKey": true,
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "interview_id",
                    "type": "bigint",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "token",
                    "type": "varchar(255)",
                    "constraints": {
                      "nullable": false,
                      "unique": true
                    }
                  }
                },
                {
                  "column": {
                    "name": "interview_link",
                    "type": "LONGTEXT",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "expiry_time",
                    "type": "datetime",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "is_active",
                    "type": "boolean",
                    "defaultValueBoolean": true,
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "created_at",
                    "type": "datetime",
                    "defaultValueComputed": "CURRENT_TIMESTAMP",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "updated_at",
                    "type": "datetime",
                    "defaultValueComputed": "CURRENT_TIMESTAMP",
                    "constraints": {
                      "nullable": false
                    }
                  }
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
