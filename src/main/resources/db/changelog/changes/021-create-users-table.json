{
  "databaseChangeLog": [
    {
      "changeSet": {
        "id": "021-create-users-table",
        "author": "goodmood",
         "validCheckSum": "ANY",
        "comment": "Create users table",
        "changes": [
          {
            "createTable": {
              "tableName": "users",
              "columns": [
                {
                  "column": {
                    "name": "id",
                    "type": "bigint",
                    "autoIncrement": true,
                    "constraints": {
                      "primaryKey": true,
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "f_name",
                    "type": "varchar(255)",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "l_name",
                    "type": "varchar(255)",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "username",
                    "type": "varchar(255)",
                    "constraints": {
                      "nullable": false,
                      "unique": true
                    }
                  }
                },
                {
                  "column": {
                    "name": "email",
                    "type": "varchar(255)",
                    "constraints": {
                      "nullable": false,
                      "unique": true
                    }
                  }
                },
                {
                  "column": {
                    "name": "password",
                    "type": "varchar(255)",
                    "constraints": {
                      "nullable": true
                    }
                  }
                },
                 {
                  "column": {
                    "name": "admin_password_count",
                    "type": "int",
                    "defaultValueNumeric": 0,
                    "constraints": {
                      "nullable": true
                    }
                  }
                },
                {
                  "column": {
                    "name": "mobile",
                    "type": "varchar(20)"
                  }
                },
                {
                  "column": {
                    "name": "avatar",
                    "type": "varchar(255)",
                     "constraints": {
                      "nullable": true
                    }
                  }
                },
                 {
                  "column": {
                    "name": "gender",
                    "type": "tinyint", 
                    "remarks": "1=Male, 2=Female, 0=Other",
                    "constraints": {
                      "nullable": true
                    }
                  }
                },
                {
                    "column": {
                        "name": "date_of_birth", 
                        "type": "date",
                        "remarks": "Stores date only (YYYY-MM-DD), no time",
                        "constraints": {
                        "nullable": true
                        }
                    }
                },
                {
                  "column": {
                    "name": "otp",
                    "type": "int",
                      "constraints": {
                      "nullable": true
                    }
                  }
                },
                {
                  "column": {
                    "name": "otp_expire",
                    "type": "datetime",
                      "constraints": {
                      "nullable": true
                    }
                  }
                },
                {
                  "column": {
                    "name": "o_auth",
                    "type": "varchar(255)",
                      "constraints": {
                      "nullable": true
                    }
                  }
                },
                {
                  "column": {
                    "name": "oauth_provider",
                    "type": "varchar(255)",
                      "constraints": {
                      "nullable": true
                    }
                  }
                },
                {
                  "column": {
                    "name": "status",
                    "type": "int",
                    "defaultValueNumeric": 1,
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "is_deleted",
                    "type": "int",
                    "defaultValueNumeric": 0,
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "created_at",
                    "type": "datetime",
                    "defaultValueComputed": "CURRENT_TIMESTAMP",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "updated_at",
                    "type": "datetime",
                    "defaultValueComputed": "CURRENT_TIMESTAMP",
                    "constraints": {
                      "nullable": false
                    }
                  }
                }
              ]
            }
          }
        ]
      }
    }
  ]
}